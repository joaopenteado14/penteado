# ================================================
# SDR WHATSAPP + AGENDAMENTO AUTOMÁTICO - CONFIGURAÇÕES EXEMPLO
# ATENÇÃO: SUBSTITUA TODOS OS VALORES PELOS REAIS NO SEU .env
# ================================================

# Configurações do Servidor
PORT=3000
NODE_ENV=production
BASE_URL=https://seu-app.onrender.com

# Configurações do WhatsApp Business API
WHATSAPP_VERIFY_TOKEN=seu_token_verificacao_aqui
WHATSAPP_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WHATSAPP_PHONE_NUMBER_ID=123456789012345
WHATSAPP_BUSINESS_ACCOUNT_ID=123456789012345678

# Configurações do MongoDB
MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/sdr-database?retryWrites=true&w=majority

# Configurações da OpenAI
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# GOOGLE CALENDAR API (AGENDAMENTO AUTOMÁTICO)
GOOGLE_CLIENT_ID=123456789-xxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_REDIRECT_URI=https://seu-app.onrender.com/auth/google/callback
GOOGLE_REFRESH_TOKEN=1//xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_ACCESS_TOKEN=ya29.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
YOUR_EMAIL=seu-email@gmail.com
CALENDAR_ID=primary

# Configurações do N8N
N8N_WEBHOOK_URL=https://seu-n8n.domain.com/webhook/lead-qualification
N8N_WEBHOOK_TOKEN=seu_token_n8n_webhook
N8N_WEBHOOK_SECRET=seu_secret_n8n_webhook

# Configurações de Segurança
JWT_SECRET=sua_chave_jwt_super_secreta_aqui
ENCRYPTION_KEY=sua_chave_encriptacao_32_chars
WEBHOOK_SECRET=seu_webhook_secret_para_validacao

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_CONCURRENT_CONVERSATIONS=50

# CONFIGURAÇÕES DE AGENDAMENTO
TIMEZONE=America/Sao_Paulo
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=1,2,3,4,5
MEETING_DURATION_MINUTES=30
BUFFER_MINUTES=15
MAX_MEETINGS_PER_DAY=20
MEETING_TITLE_PREFIX=Reunião SDR -
MEETING_LOCATION=Google Meet
REMINDER_MINUTES_BEFORE=30,1440

# Configurações de Log
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Configurações de Performance
MESSAGE_PROCESSING_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=300000
METRICS_ENABLED=true

# Configurações de Email (para envio de convites)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua_senha_app_google
EMAIL_FROM=noreply@suaempresa.com

# URLs e Domínios
FRONTEND_URL=https://seu-frontend.com
WEBHOOK_ENDPOINT=/webhook/whatsapp
CALENDAR_WEBHOOK_ENDPOINT=/webhook/calendar
