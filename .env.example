# ================================================
# SDR WHATSAPP + AGENDAMENTO AUTOMÁTICO 
# TEMPLATE DE CONFIGURAÇÃO - SUBSTITUA PELOS VALORES REAIS
# ================================================

# Configurações do Servidor
PORT=3000
NODE_ENV=production
BASE_URL=https://your-app.onrender.com

# WhatsApp Business API - Obtenha em: https://developers.facebook.com/apps/
WHATSAPP_VERIFY_TOKEN=YOUR_WEBHOOK_VERIFY_TOKEN_HERE
WHATSAPP_ACCESS_TOKEN=YOUR_WHATSAPP_ACCESS_TOKEN_HERE
WHATSAPP_PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID_HERE
WHATSAPP_BUSINESS_ACCOUNT_ID=YOUR_BUSINESS_ACCOUNT_ID_HERE

# MongoDB Atlas - Obtenha em: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DATABASE?retryWrites=true&w=majority

# OpenAI API - Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# Google Calendar API - Configure em: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_REDIRECT_URI=https://your-app.onrender.com/auth/google/callback
GOOGLE_REFRESH_TOKEN=YOUR_GOOGLE_REFRESH_TOKEN_HERE
YOUR_EMAIL=your-email@company.com
CALENDAR_ID=primary

# N8N Integration
N8N_WEBHOOK_URL=https://your-n8n.domain.com/webhook/lead-qualification
N8N_WEBHOOK_TOKEN=YOUR_N8N_WEBHOOK_TOKEN
N8N_WEBHOOK_SECRET=YOUR_N8N_WEBHOOK_SECRET

# Configurações de Segurança
JWT_SECRET=YOUR_JWT_SECRET_32_CHARS_MINIMUM
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_32_CHARS
WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_FOR_VALIDATION

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_CONCURRENT_CONVERSATIONS=50

# Configurações de Agendamento
TIMEZONE=America/Sao_Paulo
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=1,2,3,4,5
MEETING_DURATION_MINUTES=30
BUFFER_MINUTES=15
MAX_MEETINGS_PER_DAY=20
MEETING_TITLE_PREFIX=Reunião SDR -
MEETING_LOCATION=Google Meet
REMINDER_MINUTES_BEFORE=30,1440

# Configurações de Sistema
LOG_LEVEL=info
DEBUG_MODE=false
MESSAGE_PROCESSING_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=300000
METRICS_ENABLED=true

# Email Configuration (para convites)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=YOUR_APP_PASSWORD_HERE
EMAIL_FROM=noreply@yourcompany.com
